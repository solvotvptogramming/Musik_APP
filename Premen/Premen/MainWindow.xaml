<Window x:Class="Premen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Premen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>


        <TextBlock Margin="10 10 10 1" Text="username"></TextBlock>
        <TextBox Margin="10 10 10 1" x:Name="username" ></TextBox>
        <TextBlock Margin="10 10 10 1" Text="lastname"></TextBlock>
        <TextBox Margin="10 10 10 1" x:Name="lastname" ></TextBox>
        <TextBlock Margin="10 10 10 1"  Text="password"></TextBlock>
        <TextBox Margin="10 10 10 1" x:Name="password" ></TextBox>
        <Button Margin="10 10 10 1" Content="Сохранить пользователя" x:Name="Save" Click="Save_Click"></Button>
        <Button Margin="10 10 10 10" Content="Показать пользователя" x:Name="Event" Click="Event_Click"></Button>
        <Label x:Name="All" Margin="10 10 10 10"></Label>
        
        
    </StackPanel>
</Window>
